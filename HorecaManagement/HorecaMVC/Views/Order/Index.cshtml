@{
    ViewData["Title"] = "Order Overview";
}

<div class="text-center">
    <h1 class="display-4">Orders</h1>
    <div class="container">
        <div class="row">
            <div class="col input-group">
                <div class="form-outline">
                    <input type="search" id="form1" class="form-control" placeholder="Search..." />
                </div>
            </div>
            <div class="col">
                <a asp-action="Create" class="btn btn-primary float-end">New Order</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tableView" class="table table-hover mt-2">
            <thead>
                <tr>
                    <th scope="col" class="col-4">Number</th>
                    <th scope="col" class="col-4">Table</th>
                    <th scope="col" class="col-4">Options</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 3; i++)
                {
                    <tr>
                        <td>@i</td>
                        <td>Table @i</td>
                        <td>
                            <a asp-action="Detail" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" class="btn btn-primary">Edit</a>
                            <button id="toDeleteModal" type="button" class="modalbutton btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="#deleteModal" data-id="0">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Ingredient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="dvData">
                Are you sure you want to delete this order?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="deleteButton" asp-action="Delete" class="btn btn-danger">Yes</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
       $(document).on("click","#toDeleteModal",OpenModalDelete);
    });

    function OpenModalDelete(){
       var itemId = $(this).data("id");
       $('#deleteButton').attr('href', "/Order/Delete/" + itemId)
       $("#deleteModal").modal();
    }
</script>