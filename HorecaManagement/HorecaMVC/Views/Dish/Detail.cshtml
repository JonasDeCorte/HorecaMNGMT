@model Horeca.MVC.Models.Dishes.DishDetailViewModel

@{
    ViewData["Title"] = "Dish Detail";
}

<div class="d-flex flex-column text-center align-items-center">
    <h1 class="display-4">@Model.Name</h1>
    @*<div style="max-width: 500px;">
        <img src="https://www.solo.be/uploadedimages/recepten/afbeeldingen/168331-biefstuk-friet.jpg" alt="@Model.Name"
             class="img-thumbnail" style="max-width: 100%; height: auto;" />
    </div>*@
    <table class="table" style="table-layout: fixed">
        <thead>
            <tr>
                <th scope="col">Dish Type</th>
                <th scope="col">Category</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">@Model.DishType</td>
                <td>@Model.Category</td>
            <tr />
        </tbody>
    </table>
    <table class="table">
        <tbody>
            <tr class="d-flex flex-column">
                <th scope="col">Description</th>
                <td scope="row">
                    @Model.Description
                </td>
            </tr>
            <tr class="d-flex flex-column">
                <th scope="col" colspan="2">Ingredients</th>
                <td scope="row">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Unit</th>
                                    <th scope="col">Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @Model.Ingredients)
                                {
                                    <tr>
                                        <td scope="row">@item.Name</td>
                                        <td>@item.BaseAmount</td>
                                        <td>@item.Unit.Name</td>
                                        <td>
                                            <a asp-action="EditIngredient" asp-route-dishId="@Model.Id"
                                                asp-route-ingredientId="@item.IngredientId"
                                                class="btn btn-primary">Edit</a>
                                            <button id="toDeleteModal" type="button" class="modalbutton btn btn-danger"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.IngredientId">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="4">
                                        <a asp-action="AddExistingIngredient" asp-route-id="@Model.Id" type="button" class="btn btn-primary">
                                            Add Existing Ingredient
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td scope="row">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="CreateIngredient" asp-route-id="@Model.Id" class="btn btn-primary">Create Ingredient</a>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="modal fade" id="deleteModal" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Dish Ingredient</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove this ingredient from this dish?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="deleteButton" class="btn btn-danger">Yes</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
       $(document).on("click","#toDeleteModal",OpenModalDelete);
    });

    function OpenModalDelete(){
       var dishId = @Model.Id;
       var itemId = $(this).data("id");
       $('#deleteButton').attr('href', "/Dish/DeleteIngredient/" + dishId + "/" + itemId)
       $("#deleteModal").modal();
    }
</script>