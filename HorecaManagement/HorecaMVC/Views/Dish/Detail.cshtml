@model Horeca.MVC.Models.Dishes.DishDetailViewModel

@{
    ViewData["Title"] = "Dish Detail";
}

<div class="text-center">
    <div class="d-flex">
        <img src="https://www.solo.be/uploadedimages/recepten/afbeeldingen/168331-biefstuk-friet.jpg" alt="@Model.Name" 
            class="img-thumbnail" style="max-width: 50%" />
        <div class="d-flex flex-column">
            <h1 class="display-4">@Model.Name</h1>
            <table class="table" style="table-layout: fixed">
                <thead>
                    <tr>
                        <th scope="col">Dish Type</th>
                        <th scope="col">Category</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">@Model.DishType</td>
                        <td>@Model.Category</td>
                    <tr/>
                </tbody>
            </table>
            <table class="table">
                <tbody>
                    <tr class="d-flex flex-column">
                        <th scope="col">Description</th>
                        <td scope="row">
                            @Model.Description
                        </td>
                    </tr>
                    <tr class="d-flex flex-column">
                        <th scope="col" colspan="2">Ingredients</th>
                        <td scope="row">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col">Unit</t>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in @Model.Ingredients)
                                    {
                                        <tr>
                                            <td scope="row">@item.Name</td>
                                            <td>@item.BaseAmount</td>
                                            <td>@item.Unit.Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td scope="row">
                            <a asp-action="Edit" class="btn btn-primary">Edit</a>
                            <a asp-action="CreateIngredient" asp-route-id="@Model.Id" class="btn btn-primary">Add Ingredient</a>
                            <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>