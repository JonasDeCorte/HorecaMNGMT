@{
    ViewData["Title"] = "Dish Overview";
}

<div class="text-center">
    <h1 class="display-4">Dishes</h1>
    <div class="container">
        <div class="row">
            <div class="col input-group">
                <div class="form-outline">
                    <input type="search" class="form-control" placeholder="Search..." />
                </div>
                <button type="button" class="btn btn-primary ">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <div class="col">
                <button class="btn btn-primary" onclick="toggleView()">Toggle View</button>
            </div>
            <div class="col">
                <a asp-action="Create" class="btn btn-primary float-end">New Dish</a>
            </div>
        </div>
    </div>
    <div id="cardsView" class="row row-cols-1 row-cols-md-3 g-4 mt-2" style="display: visible;">
        @for (int i = 0; i < 5; i++)
        {
            <div class="col">
                <div class="card">
                    <img src="https://www.solo.be/uploadedimages/recepten/afbeeldingen/168331-biefstuk-friet.jpg"
                     class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Steak & Fries</h5>
                        <div>
                            <table class="table" style="table-layout: fixed">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Category</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Main Course</td>
                                        <td>Meat</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <a asp-action="Detail" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" class="btn btn-primary">Edit</a>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <table id="tableView" class="table" style="display: none;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Dish Type</th>
                <th scope="col">Category</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 5; i++)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>Steak & Fries</td>
                    <td>Main Course</td>
                    <td>Meat</td>
                    <td>
                        <a asp-action="Detail" class="btn btn-primary">Details</a>
                        <a asp-action="Edit" class="btn btn-primary">Edit</a>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="deleteModal" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Dish</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this dish?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>