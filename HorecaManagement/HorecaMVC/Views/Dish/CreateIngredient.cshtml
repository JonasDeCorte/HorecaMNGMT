@model Horeca.MVC.Models.Ingredients.CreateIngredientViewModel

<div class="text-center">
    <div class="card mt-3">
        <div class="card-header">
            <h1>Create Dish Ingredient</h1>
        </div>
        <form class="w-75 mx-auto">
            <div class="mt-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" id="name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <label asp-for="IngredientType" class="form-label">Type</label>
                <input asp-for="IngredientType" class="form-control" id="ingredientType" placeholder="Ingredient Type">
                <span asp-validation-for="IngredientType" class="text-danger"></span>
            </div>
            <div class="mt-2 d-flex flex-wrap justify-content-between">
                <div style="width: 45%">
                    <label asp-for="BaseAmount" class="form-label">Base Amount</label>
                    <input asp-for="BaseAmount" class="form-control" id="baseAmount" placeholder="Base Amount">
                    <span asp-validation-for="BaseAmount" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 45%">
                    <label asp-for="UnitId" class="form-label">Unit</label>
                    <select asp-for="UnitId" asp-items="@(new SelectList(Model.Units, "Id", "Name"))"
                            class="form-control">
                        <option value="0">Please select</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end" style="width: 5%">
                    <a asp-controller="Unit" asp-action="Create" class="btn btn-primary align-self-end"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="mt-2 mb-2">
                <input type="submit" value="Create" formmethod="post" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>