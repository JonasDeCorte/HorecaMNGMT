@model Horeca.MVC.Models.Tables.EditTableViewModel

<div class=text-center>
     <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Index" asp-route-id="@accountService.GetCurrentUser().Id">
                    Restaurants
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurantService.GetCurrentRestaurantId()">
                    @restaurantService.GetCurrentRestaurantName()
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Floorplan" asp-action="Index">
                    Floor Plans
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Floorplan" asp-action="Detail" asp-route-floorplanId="@Model.FloorplanId">
                    Floorplan @Model.FloorplanId
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Edit  @Model.Name</h1>
        </div><div>
            <form class="w-75 mx-auto">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display: none">
                    <label asp-for="Id" class="control-label text-black"></label>
                    <input asp-for="Id" class="form-control text-black" readonly="readonly" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div style="display: none">
                        <label asp-for="FloorplanId" class="control-label text-black"></label>
                        <input asp-for="FloorplanId" class="form-control text-black" readonly="readonly" />
                        <span asp-validation-for="FloorplanId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row mt-2">
                    <div class="col">
                        <label asp-for="Name" class="control-label text-black">Table name</label>
                        <input asp-for="Name" class="form-control text-black" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Seats" class="control-label text-black">Seats</label>
                        <input asp-for="Seats" class="form-control text-black" />
                        <span asp-validation-for="Seats" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-2 mb-2">
                    <input type="submit" value="Edit" formmethod="post" class="btn btn-primary" />
                    <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>