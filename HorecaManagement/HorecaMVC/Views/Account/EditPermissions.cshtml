@model Horeca.MVC.Models.Accounts.UserPermissionsViewModel

@{
    ViewData["Title"] = "Edit " + @Model.Username + "'s Permissions";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <form asp-action="EditPermissions" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Permissions" class="control-label"></label>
                <select class="form-control" asp-for="Permissions" 
                asp-items="@(new SelectList(Model.Permissions))" multiple="multiple" size="30">
                    <option>Please select your wanted permissions</option>
                </select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Detail" asp-route-id="@Model.Username" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>