                    <option value="3">liter</option>
                </select>
            </div>*@
            @*<div class="mt-2">
                <label for="ingredientImg" class="form-label">Ingredient Image</label>
                <input class="form-control" type="file" id="ingredientImg">
            </div>*@
            <div class="mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
