@model Horeca.MVC.Models.Ingredients.CreateIngredientViewModel

<div class="text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Index" asp-route-id="@accountService.GetCurrentUser().Id">
                    Restaurants
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurantService.GetCurrentRestaurantId()">
                    @restaurantService.GetCurrentRestaurantName()
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Ingredient" asp-action="Index">
                    Ingredients
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Ingredient" asp-action="Detail" asp-route-id="@Model.IngredientId">
                    Ingredient @Model.IngredientId
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Edit @Model.Name</h1>
        </div>
        <form asp-action="Edit" asp-route-id=@Model.IngredientId class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-2">
                <label asp-for="Name" class="form-label text-black">Name</label>
                <input asp-for="Name" class="form-control text-black" id="name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <label asp-for="IngredientType" class="form-label text-black">Type</label>
                <input asp-for="IngredientType" class="form-control text-black" id="ingredientType" placeholder="Ingredient Type">
                <span asp-validation-for="IngredientType" class="text-danger"></span>
            </div>
            <div class="mt-2 d-flex flex-wrap justify-content-between">
                <div style="width: 45%">
                    <label asp-for="BaseAmount" class="form-label text-black">Base Amount</label>
                    <input asp-for="BaseAmount" class="form-control text-black" id="baseAmount" placeholder="Base Amount">
                    <span asp-validation-for="BaseAmount" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 45%">
                    <label asp-for="UnitId" class="form-label text-black">Unit</label>
                    <select asp-for="UnitId" asp-items="@(new SelectList(Model.Units, "Id", "Name"))"
                            class="form-control text-black">
                        <option value="0" class="text-black">Please select</option>
                    </select>
                </div>
                <div class="d-flex justify-content-end" style="width: 5%">
                    <a asp-controller="Unit" asp-action="Create" class="btn btn-primary align-self-end"
                        data-bs-toggle="tooltip" data-bs-placement="left" title="Create a new unit">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>