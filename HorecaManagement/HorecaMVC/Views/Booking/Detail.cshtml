@model Horeca.MVC.Models.Bookings.BookingViewModel

<div class="text-center">
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Booking @Model.Id</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-light mt-2 mb-0">
                <thead>
                    <tr>
                        <th scope="col" class="col-2">Date</th>
                        <th scope="col" class="col-2">Period</th>
                        <th scope="col" class="col-2">Contact Name</th>
                        <th scope="col" class="col-2">Phone Number</th>
                        <th scope="col" class="col-2">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">@Model.BookingDate.ToShortDateString()</td>
                        <td>@Model.CheckIn?.ToShortTimeString() - @Model.CheckOut?.ToShortTimeString()</td>
                        <td>@Model.FullName</td>
                        <td>@Model.PhoneNo</td>
                        <td>@Model.BookingStatus</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-dark">
            <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
        </div>
    </div>
</div>