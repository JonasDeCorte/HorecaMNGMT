@using static Horeca.Shared.Utils.Constants
@model Horeca.MVC.Models.Bookings.BookingListViewModel

<div class="text-center">
    <h1 class="display-4">Bookings</h1>
    <div class="container">
        <div class="row">
            <div class="col input-group">
                <div class="form-outline">
                    <input type="search" id="form1" class="form-control" placeholder="Search..." />
                </div>
            </div>
            <div class="col d-flex justify-content-center">
                <button class="btn btn-primary dropdown-toggle" type="button"
                        id="selectStatusButton" data-bs-toggle="dropdown" aria-expanded="false">
                    Select status
                </button>
                <ul class="dropdown-menu" aria-labelledby="selectStatusButton">
                    <li><a asp-action="Index" asp-route-status="All" class="dropdown-item">All</a></li>
                    <li><a asp-action="Index" asp-route-status="@BookingStatus.PENDING" class="dropdown-item">Pending</a></li>
                    <li><a asp-action="Index" asp-route-status="@BookingStatus.EXPIRED" class="dropdown-item">Expired</a></li>
                    <li><a asp-action="Index" asp-route-status="@BookingStatus.COMPLETE" class="dropdown-item">Complete</a></li>
                </ul>
            </div>
            <div class="col">
                @if (accountService.Authorize("Booking_Create"))
                {
                    <a asp-action="Create" class="btn btn-primary float-end">New Booking</a>
                }
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tableView" class="table table-hover mt-2">
            <thead>
                <tr>
                    <th scope="col" class="col-2">Id</th>
                    <th scope="col" class="col-2">Contact Name</th>
                    <th scope="col" class="col-3">Date</th>
                    <th scope="col" class="col-2">Status</th>
                    <th scope="col" class="col-3">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.FullName</td>
                        <td>@booking.BookingDate</td>
                        <td>@booking.BookingStatus</td>
                        <td>
                            <a asp-action="Detail" asp-route-bookingNo="@booking.BookingNo" class="btn btn-primary">Details</a>
                            @if (accountService.Authorize("Booking_Update"))
                            {
                                <a asp-action="Edit" class="btn btn-primary">Edit</a>
                            }
                            @if (accountService.Authorize("Booking_Delete"))
                            {
                                <button id="toDeleteModal" type="button" class="modalbutton btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-id="@booking.Id">
                                    Delete
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="dvData">
                Are you sure you want to delete this booking?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="deleteButton" asp-action="Delete" class="btn btn-danger">Yes</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
       $(document).on("click","#toDeleteModal",OpenModalDelete);
    });

    function OpenModalDelete(){
       var itemId = $(this).data("id");
       $('#deleteButton').attr('href', "/Booking/Delete/" + itemId)
       $("#deleteModal").modal();
    }
</script>