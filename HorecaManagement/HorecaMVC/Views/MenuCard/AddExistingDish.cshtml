@model Horeca.MVC.Models.MenuCards.ExistingMenuCardDishesViewModel

<div class="text-center">
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Add Existing Dish</h1>
        </div>
        <form asp-action="AddExistingDish" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="DishId" class="control-label text-black">Pick a dish:</label>
                <select asp-for="DishId" asp-items="@(new SelectList(Model.Dishes, "DishId", "Name"))" class="form-control text-black">
                </select>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>