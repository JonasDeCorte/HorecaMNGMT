@model Horeca.MVC.Models.MenuCards.ExistingMenuCardMenusViewModel

<div class="text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Index" asp-route-id="@accountService.GetCurrentUser().Id">
                    Restaurants
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurantService.GetCurrentRestaurantId()">
                    @restaurantService.GetCurrentRestaurantName()
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="MenuCard" asp-action="Index">
                    Menus
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="MenuCard" asp-action="Detail" asp-route-id="@Model.MenuCardId">
                    Menu Card @Model.MenuCardId
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Add Menu</li>
        </ol>
    </nav>
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Add Existing Menu</h1>
        </div>
        <form asp-action="AddExistingMenu" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="MenuId" class="control-label text-black">Pick a menu:</label>
                <select asp-for="MenuId" asp-items="@(new SelectList(Model.Menus, "MenuId", "Name"))" class="form-control text-black">
                </select>
                <span asp-validation-for="MenuId" class="text-danger"></span>

            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>