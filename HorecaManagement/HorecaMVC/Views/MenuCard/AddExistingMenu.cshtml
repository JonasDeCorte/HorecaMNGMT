@model Horeca.MVC.Models.MenuCards.ExistingMenuCardMenusViewModel

<div class="text-center">
    <div class="card mt-3">
        <div class="card-header">
            <h1>Add Existing Menu</h1>
        </div>
        <form asp-action="AddExistingMenu" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="MenuId" class="control-label">Pick a dish:</label>
                <select asp-for="MenuId" asp-items="@(new SelectList(Model.Menus, "MenuId", "Name"))" class="form-control">
                </select>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>