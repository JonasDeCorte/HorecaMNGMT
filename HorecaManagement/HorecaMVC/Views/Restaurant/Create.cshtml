@model Horeca.MVC.Models.Restaurants.MutateRestaurantViewModel

<div class="text-center">
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Create Restaurant</h1>
        </div>
        <form class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-2">
                <label asp-for="Name" class="control-label text-black"></label>
                <input asp-for="Name" class="form-control text-black" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <label asp-for="OwnerName" class="control-label text-black">Owner Name</label>
                <input asp-for="OwnerName" class="form-control text-black" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <input type="submit" value="Create" formmethod="post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>