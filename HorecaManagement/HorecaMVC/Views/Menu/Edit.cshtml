@{
    ViewData["Title"] = "Edit Menu";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <form class="w-75 mx-auto">
            <div>
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Name">
            </div>
            <div class="mt-2">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3"></textarea>
            </div>
            <div class="mt-2">
                <label for="ingredientList" class="form-label">Dishes</label>
                <input class="form-control" list="datalistOptions" id="dishList" placeholder="Type to search...">
                <datalist id="datalistOptions">
                    <option value="Fries"></option>
                    <option value="Steak & Fries"></option>
                    <option value="Fish & Chips"></option>
                </datalist>
            </div>
            <div class="mt-2">
                <label for="menuImg" class="form-label">Menu Image</label>
                <input class="form-control" type="file" id="dishImg">
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>