@model Horeca.MVC.Models.Menus.MenuViewModel

<div class="text-center">
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Edit @Model.Name</h1>
        </div>
        <form asp-action="Edit" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2" style="display: none">
                <label asp-for="MenuId" class="control-label text-black"></label>
                <input asp-for="MenuId" class="form-control text-black" readonly="readonly" />
                <span asp-validation-for="MenuId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label text-black"></label>
                <input asp-for="Name" class="form-control text-black" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Category" class="control-label text-black"></label>
                    <input asp-for="Category" class="form-control text-black" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Price" class="control-label text-black"></label>
                    <input asp-for="Price" class="form-control text-black" id="baseAmount">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-2">
                <label asp-for="Description" class="control-label text-black"></label>
                <textarea asp-for="Description" class="form-control row-3 text-black"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>