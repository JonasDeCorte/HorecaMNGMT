@{
    ViewData["Title"] = "Edit Menu";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <form class="w-75 mx-auto">
            <div class="mt-2">
                <label @*asp-for="Name"*@ class="form-label">Name</label>
                <input @*asp-for="Name"*@ class="form-control" id="name" placeholder="Name">
            </div>
            <div class="mt-2">
                <label @*asp-for="Category"*@ class="form-label">Category</label>
                <input @*asp-for="Category"*@ class="form-control" id="category" placeholder="Category">
            </div>
            <div class="mt-2">
                <label @*asp-for="Description"*@ class="form-label">Description</label>
                <input @*asp-for="Description"*@ class="form-control" id="description" placeholder="Description">
            </div>
            <div class="mt-2">
                <input type="submit" value="Create" formmethod="post" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>