@model Horeca.MVC.Models.Dishes.MenuDishViewModel

<div class="text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Index" asp-route-id="@accountService.GetCurrentUser().Id">
                    Restaurants
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurantService.GetCurrentRestaurantId()">
                    @restaurantService.GetCurrentRestaurantName()
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Menu" asp-action="Index">
                    Menus
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Menu" asp-action="Detail" asp-route-id="@Model.MenuId">
                    Menu @Model.MenuId
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Dish" asp-action="Detail" asp-route-id="@Model.DishId">
                    Dish @Model.DishId
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Edit Menu Dish @Model.Name</h1>
        </div>
        <form asp-action="EditDish" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mt-2" style="display: none">
                <label asp-for="MenuId" class="control-label"></label>
                <input asp-for="MenuId" class="form-control" readonly="readonly"/>
                <span asp-validation-for="MenuId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label text-black"></label>
                <input asp-for="Name" class="form-control text-black" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row mt-2">
                <div class="col">
                    <label asp-for="Category" class="control-label text-black"></label>
                    <input asp-for="Category" class="form-control text-black" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DishType" class="control-label text-black"></label>
                    <input asp-for="DishType" class="form-control text-black" />
                    <span asp-validation-for="DishType" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Price" class="form-label text-black"></label>
                    <input asp-for="Price" class="form-control text-black">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-2">
                <label asp-for="Description" class="control-label text-black"></label>
                <textarea asp-for="Description" class="form-control row-3 text-black"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>