@model Horeca.MVC.Models.Menus.ExistingMenuDishesViewModel

<div class="text-center">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Index" asp-route-id="@accountService.GetCurrentUser().Id">
                    Restaurants
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurantService.GetCurrentRestaurantId()">
                    @restaurantService.GetCurrentRestaurantName()
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Menu" asp-action="Index">
                    Menus
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Menu" asp-action="Detail" asp-route-id="@Model.MenuId">
                    Menu @Model.MenuId
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Add Dish</li>
        </ol>
    </nav>
    <div class="shadow card bg-light mt-3">
        <div class="card-header bg-dark">
            <h1>Add Existing Dish</h1>
        </div>
        <form asp-action="AddExistingDish" class="w-75 mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="DishId" class="control-label text-black">Pick a dish:</label>
                <select asp-for="DishId" asp-items="@(new SelectList(Model.Dishes, "DishId", "Name"))" class="form-control text-black">
                </select>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>