@model Horeca.MVC.Models.Schedules.ScheduleDetailViewModel

<div class="text-center">
    <div class="card mt-3">
        <div class="card-header">
            <p class="display-6">@Model.RestaurantName - @Model.ScheduleDate.ToShortDateString()</p>
        </div>
        <div class="card-body d-flex flex-nowrap justify-content-center">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Period</li>
                <li class="list-group-item">Schedule status</li>
                <li class="list-group-item">Available seats:</li>
            </ul>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Model.StartTime.ToShortTimeString() - @Model.EndTime.ToShortTimeString()</li>
                <li class="list-group-item">@Model.Status</li>
                <li class="list-group-item">@Model.AvailableSeat / @Model.Capacity</li>
            </ul>
        </div>
        <div class="card-footer">
            @if (accountService.Authorize(PermissionConstants.Booking_Create))
            {
                <a asp-controller="Booking" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary">Book</a>
            }
            @if (accountService.Authorize(PermissionConstants.Schedule_Update))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            }
                <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-header">
            <h3>Bookings</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mt-2 mb-0">
                <thead class="table-header">
                    <tr>
                        <th scope="col" class="col-1">Id</th>
                        <th scope="col" class="col-2">Date</th>
                        <th scope="col" class="col-2">Check in</th>
                        <th scope="col" class="col-2">Check out</th>
                        <th scope="col" class="col-2">Status</th>
                        <th scope="col" class="col-4">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.BookingDate.ToShortDateString()</td>
                        <td>@booking.CheckIn?.ToShortTimeString()</td>
                        <td>@booking.CheckOut?.ToShortTimeString()</td>
                        <td>@booking.BookingStatus</td>
                        <td>
                            <a asp-action="Detail" asp-route-bookingNo="@booking.BookingNo" class="btn btn-primary">Details</a>
                            @if (accountService.Authorize(PermissionConstants.Booking_Update))
                            {
                            <a asp-action="Edit" class="btn btn-primary">Edit</a>
                            }
                            @if (accountService.Authorize(PermissionConstants.Booking_Delete))
                            {
                            <button id="toDeleteModal" type="button" class="modalbutton btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-id="@booking.Id">
                                Delete
                            </button>
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="dvData">
                Are you sure you want to delete this booking?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="deleteButton" asp-action="Delete" class="btn btn-danger">Yes</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
       $(document).on("click","#toDeleteModal",OpenModalDelete);
    });

    function OpenModalDelete(){
       var itemId = $(this).data("id");
       var page = "ScheduleDetail"
       $('#deleteButton').attr("href", "/Booking/Delete/" + itemId + "/" + page)
       $("#deleteModal").modal();
    }
</script>