@model Horeca.MVC.Models.Floorplans.FloorplanDetailViewModel
<div class="wrapper">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Index" asp-route-id="@accountService.GetCurrentUser().Id">
                    Restaurants
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurantService.GetCurrentRestaurantId()">
                    @restaurantService.GetCurrentRestaurantName()
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" asp-controller="Floorplan" asp-action="Index">
                    Floor Plans
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>
    <header class="header">
        <div class="card-header bg-dark">
            <h1>@Model.Name</h1>
        </div>
    </header>
    <article class="main">
        <div id="drawing-container" class="canvas-container bg-white" style="position: relative; user-select: none;">
            <canvas class="lower-canvas" style="position: absolute; /*width: 600px; height: 600px; */left: 0px; top: 0px; user-select: none;"></canvas>
            <canvas id="drawing-area" class="upper-canvas" style="position: absolute; left: 0px; top: 0px; user-select: none;/* width: 600px; height: 600px; */cursor: default;"></canvas>
        </div>
    </article>
    <aside class="aside aside-1">
        <div class="d-grid gap-2 d-md-block mx-auto">
            <a class="btn btn-primary m-2" id="clear-canvas">
                Clear canvas
            </a>
            <a class="btn btn-primary m-2" id="toImage">
                Export
            </a>
            <!--
                for now to test
                function can be used to get the json from the canvas to save in the database
            -->
            <a class="btn btn-primary m-2" id="ToJson" data-id="@Model.Id">
                Save floorplan
            </a>
            <!--
               for now to test
               function can be used to get the json from the canvas from the database and to load the canvas
            -->
            <a class="btn btn-primary m-2" id="FromJson">
                Get floorplan
            </a>
        </div>
    </aside>
    <aside class="aside aside-2">
        <div id="shapes">
            <ul>
                <li> <img class="shape" src="https://euc1.posios.com/posimages/MAIN/images/tables/01-parasol-dark.png"> </li>
            </ul>
        </div>
    </aside>
    <footer class="footer">Footer</footer>
</div>
